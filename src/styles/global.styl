@import 'scrollbars.styl'
@import 'constants.styl'

html
  overflow-x hidden
  min-height 100%

*
  box-sizing border-box
  margin 0
  padding 0
  color colorText1

body
  scrollable()

  position relative
  overflow-x hidden
  width 100vw
  height 100%
  min-height 100vh
  margin 0
  padding 0
  color colorText1
  background colorBg
  border none
  outline none
  -webkit-overflow-scrolling touch

#app
  width 100%
  height 100%

a
  text-decoration none
a:visited
  color inherit

ul
  list-style none
